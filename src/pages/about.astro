---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "The Tea";
---
<style>
/* hide on mobile */
aside {
  top: 0;
  right: 0;
  position: absolute;
  width: 300px;
  
  /* box-sizing: content-box;
  max-inline-size: 100%;
  grid-column-start: 2; */
  margin: 0;
  grid-area: aside;

  /* border: dashed 5px;
  border-radius: 12px;
  background-color: white; */
  margin: 1rem 2rem;
}

.notification {
  padding: 0.5rem 0.75rem;
  min-height: 4rem;
  border: solid 3px;
  border-radius: 12px;
  background-color: white;
  margin-bottom: 1.5rem;
  border-color: var(--gray-7);
  box-shadow: 6px 6px 0px var(--gray-7);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 0.5rem;
}

.notification:nth-of-type(1) {
  animation: bounce-in-top 1.1s 5s both;
}

.notification:nth-of-type(2) {
  animation: bounce-in-top 1.1s 10s both;
}

.notification:nth-of-type(3) {
  animation: bounce-in-top 1.1s 20s both;
}

.notification:nth-of-type(4) {
  animation: bounce-in-top 1.1s 30s both;
}

.notification:nth-of-type(5) {
  animation: bounce-in-top 1.1s 60s both;
}

.notification:nth-of-type(6) {
  animation: bounce-in-top 1.1s 90s both;
}

.notification:nth-of-type(7) {
  animation: bounce-in-top 1.1s 120s both;
}

.notification:nth-of-type(7) {
  animation: bounce-in-top 1.1s 150s both;
}

.notification:nth-of-type(8) {
  animation: bounce-in-top 1.1s 180s both;
}

.notification:nth-of-type(9) {
  animation: bounce-in-top 1.1s 210s both;
}


